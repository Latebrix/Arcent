<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme (post-splash). Keep neutral window background so Compose controls colors -->
    <style name="Theme.Arcent" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <!-- Dedicated Splash theme used only at launch. System SplashScreen API reads these attributes. -->
    <style name="Theme.Arcent.Splash" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/arcent_logo_noback</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowSplashScreenBackground">@color/arcent_primary_splash</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>

    </style>

    <!-- Splash Screen Theme (pre Android 12) -->
    <style
        name="Theme.App.Starting"
        parent="Theme.SplashScreen.IconBackground">
        <item name="windowSplashScreenBackground">@color/arcent_primary_splash</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/arcent_logo_noback</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.Arcent</item>
    </style>
</resources>